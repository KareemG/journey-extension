{
  "manifest_version": 2,
  "name": "journey",
  "description": "Keep track of a journey. Track the websites you visit in order to reach a goal, and add a commentary for the enthusiastic reader",
  "version": "1.0",
  /*
  "content_scripts": [
    {
	   "js": ["jquery-2.2.0.min.js"] 
    }
  ],*/
  "offline_enabled": true,
  "permissions": [
   "background",
   "tabs",
   "http://*/*", 
   "https://*/*"
  ],
  "background": {
    "page": "background.html"
  },  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
   
}