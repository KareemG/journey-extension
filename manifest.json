{
  "manifest_version": 2,

  "name": "journey",
  "description": "Keep track of a journey. Track the websites you visit in order to reach a goal, and add a commentary for the enthusiastic reader",
  "version": "1.0",

  "background": {
    "scripts": ["jquery-2.2.0.min.js", "background.js"]
  },  
  /*
  "content_scripts": [
    {
	   "js": ["jquery-2.2.0.min.js"] 
    }
  ],*/
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  
  "offline_enabled": true,
  
  "permissions": [
   "tabs",
   "http://*/*", 
   "https://*/*"
   ]
   
   
}